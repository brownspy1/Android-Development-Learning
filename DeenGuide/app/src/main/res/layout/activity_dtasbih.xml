<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DTasbih"
    android:background="#079ba8"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:weightSum="100">

        <ImageView
            android:id="@+id/infodev"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            app:tint="@color/black"
            android:src="@drawable/info_icon"

            />

        <TextView
            android:id="@+id/counter"
            android:gravity="center"
            android:textSize="70sp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="à§¦"
            android:textColor="@color/black"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/number"
            android:backgroundTint="@color/apcolor"
            android:background="@drawable/rounded"
            android:elevation="8dp"
            android:layout_weight="50" />

        <ImageView
            android:id="@+id/add_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="10dp"
            android:layout_below="@+id/counter"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="300dp"
            android:layout_weight="100"
            android:tooltipText="Tasbih count"
            android:elevation="8dp"
            android:backgroundTint="@color/apcolor"
            android:background="@drawable/round_button_bg"
            android:src="@drawable/add"/>

        <ImageView

            android:id="@+id/reset_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/add_btn"
            android:layout_gravity="end"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="49dp"
            android:layout_toRightOf="@+id/add_btn"
            android:src="@drawable/res"
            android:tooltipText="Reset batton" />


    </RelativeLayout>

</LinearLayout>