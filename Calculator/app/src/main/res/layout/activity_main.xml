<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FA"
    android:padding="10dp"
    android:scrollbars="none"
    tools:context=".MainActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/Product_details"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/hindsiliguribold"
            android:textSize="30dp"
            android:gravity="center"
            android:textColor="@color/primary"/>
        <!-- Product Name Section -->
        <TextView
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/hindsiligurimedium"
            android:text="@string/ProductName"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/in_name"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded"
            android:backgroundTint="@color/white"
            android:hint="@string/ProductName"
            android:fontFamily="@font/hindsiligurimedium"
            android:inputType="text"
            android:elevation="10dp"
            android:ems="10" />
        <!-- Product price Section -->
        <TextView
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:fontFamily="@font/hindsiligurimedium"
            android:text="@string/ProductPrice"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/in_price"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded"
            android:backgroundTint="@color/white"
            android:hint="@string/ProductPrice"
            android:fontFamily="@font/hindsiligurimedium"
            android:inputType="number"
            android:elevation="10dp"
            android:ems="10" />

        <!-- Chinis Curiarcarge Section -->
        <TextView
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/hindsiligurimedium"
            android:text="@string/ChinisCuriarcarge"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/in_chinis"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded"
            android:backgroundTint="@color/white"
            android:hint="@string/ChinisCuriarcarge"
            android:fontFamily="@font/hindsiligurimedium"
            android:inputType="number"
            android:elevation="10dp"
            android:ems="10" />


        <!-- ShipingCuriarcarge Section -->
        <TextView
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/hindsiligurimedium"
            android:text="@string/ShipingCuriarcarge"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/ShipingCuriarcarge"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded"
            android:backgroundTint="@color/white"
            android:hint="@string/ShipingCuriarcarge"
            android:fontFamily="@font/hindsiligurimedium"
            android:inputType="number"
            android:elevation="10dp"
            android:ems="10" />

        <!-- ProductQuantity Section -->
        <TextView
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/hindsiligurimedium"
            android:text="@string/ProductQuantity"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/quantity"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded"
            android:backgroundTint="@color/white"
            android:hint="@string/ProductQuantity"
            android:fontFamily="@font/hindsiligurimedium"
            android:inputType="numberDecimal"
            android:elevation="10dp"
            android:ems="10" />

        <!-- CAC Section -->
        <TextView
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/hindsiligurimedium"
            android:text="@string/CAC"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/CAC"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded"
            android:backgroundTint="@color/white"
            android:hint="@string/CAC"
            android:fontFamily="@font/hindsiligurimedium"
            android:inputType="number"
            android:elevation="10dp"
            android:ems="10" />



        <!-- OverheadCost Section -->
        <TextView
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/hindsiligurimedium"
            android:text="@string/OverheadCost"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/OverheadCost"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded"
            android:backgroundTint="@color/white"
            android:hint="@string/OverheadCost"
            android:fontFamily="@font/hindsiligurimedium"
            android:inputType="number"
            android:elevation="10dp"
            android:ems="10" />

        <!-- profitpercent Section -->
        <TextView
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/hindsiligurimedium"
            android:text="@string/profitpercent"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/profitpercent"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded"
            android:backgroundTint="@color/white"
            android:hint="@string/profitpercent"
            android:fontFamily="@font/hindsiligurimedium"
            android:inputType="number"
            android:elevation="10dp"
            android:ems="10" />





        <TextView
            android:id="@+id/submit_button"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="ক্যালকুলেট"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/rounded"
            android:backgroundTint="@color/primary"
            />


    </LinearLayout>

  </ScrollView>