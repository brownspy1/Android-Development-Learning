<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked thumb -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <size
                android:width="30dp"
            android:height="30dp"/>
            <solid android:color="#E91E63"/>
        </shape>
    </item>

    <!-- Unchecked thumb -->
    <item>
        <shape android:shape="oval">
            <size
                android:width="30dp"
                android:height="30dp"/>
            <solid android:color="@color/primary"/> <!-- gray -->
        </shape>
    </item>
</selector>
