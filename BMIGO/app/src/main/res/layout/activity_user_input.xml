<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:background="@color/Secendary"
    tools:context=".UserInput">
    <TextView
        android:id="@+id/top_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:layout_centerHorizontal="true"
        android:text="BMI CALCULATOR"
        android:textColor="#081854"
        android:textSize="17.6dp"
        android:fontFamily="@font/inter_light"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:layout_below="@+id/top_text"
        android:layout_marginTop="39dp"
        android:weightSum="2">
        <!-- Card 01 -->
        <LinearLayout
            android:layout_width="156dp"
            android:layout_height="176dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_card"
            android:backgroundTint="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textSize="17.6sp"
                android:fontFamily="@font/inter_light"
                android:textColor="#2F2E41"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:textSize="57.39sp"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/primary"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                
                <ImageView
                    android:id="@+id/minas"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:src="@drawable/minas"/>

                <ImageView
                    android:id="@+id/Pluse"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="31dp"
                    android:src="@drawable/plus"/>

            </LinearLayout>

        </LinearLayout>
        <!-- Card 02 -->
        <LinearLayout
            android:layout_width="156dp"
            android:layout_height="176dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded_card"
            android:backgroundTint="@color/white">

        </LinearLayout>



    </LinearLayout>



</RelativeLayout>